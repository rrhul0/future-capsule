{
  "name": "future-capsule",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "dotenvx run -- concurrently \"next dev\" \"nodemon --exec tsx bull-worker/index.ts\"",
    "dev:cron": "dotenvx run -- tsx cron/index.ts",
    "build": "prisma migrate deploy && next build",
    "build:worker": "webpack --config worker/webpack.config.js",
    "start:worker": "node worker/dist/bundle.js",
    "start": "next start",
    "postinstall": "prisma generate",
    "lint": "next lint",
    "build:cron": "tsc cron/index.ts --outDir cron-dist",
    "start:cron": "node cron-dist/cron/index.js"
  },
  "dependencies": {
    "@bull-board/hono": "^6.7.1",
    "@hono/node-server": "^1.13.7",
    "@mantine/core": "^7.16.1",
    "@mantine/dates": "^7.16.1",
    "@mantine/form": "^7.16.1",
    "@mantine/hooks": "^7.16.1",
    "@mantine/notifications": "^7.16.2",
    "@paralleldrive/cuid2": "^2.2.2",
    "@phosphor-icons/react": "^2.1.7",
    "@prisma/client": "6.3.0",
    "@tanstack/react-query": "^5.65.1",
    "bullmq": "^5.35.1",
    "dayjs": "^1.11.13",
    "firebase": "^11.2.0",
    "next": "15.1.6",
    "next-auth": "^5.0.0-beta.25",
    "nodemailer": "^6.10.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-toastify": "^11.0.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.1.6",
    "postcss": "^8.5.1",
    "postcss-preset-mantine": "^1.17.0",
    "postcss-simple-vars": "^7.0.1",
    "prisma": "^6.3.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "ts-loader": "^9.5.2",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1",
    "tsconfig-paths-webpack-plugin": "^4.2.0"
  }
