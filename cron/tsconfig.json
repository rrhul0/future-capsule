{
  "compilerOptions": {
    "target": "ES2017",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["../src/*"],
      "@app/*": ["../src/app/*"],
      "@prisma-client": ["../prisma/prisma"]
    },

    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true
  },
  "include": ["./"],
  "exclude": ["node_modules", "dist"]
}
